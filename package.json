{
    "name": "mern-app",
    "version": "1.0.0",
    "description": "MERN application",
    "engines": {
      "node": ">=14.0.0"
    },
    "scripts": {
      "install-client": "cd client && npm install",
      "install-server": "cd server && npm install",
      "build-client": "cd client && npm run build",
      "start": "cd server && node index.js",
      "build": "npm run install-client && npm run build-client && npm run install-server && mkdir -p server/dist && cp -r client/dist/* server/dist/"
    }
  }